<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BottomNavigation.DashboardNavigationFragment"
    android:id="@+id/MainScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="25dp"
            android:textStyle="bold"
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/cjn_logo"
            android:layout_gravity="center"/>
        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/yt_player"
            android:scaleType="fitXY"
            android:keepScreenOn="true"
            android:layout_marginBottom="10dp"/>
<!--        <WebView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="280dp"-->
<!--            android:layout_marginBottom="10dp"-->
<!--            android:id="@+id/videoPlayer"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:text="TRAINING"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/red"
                android:id="@+id/trainingBtn"
                />
            <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:text="ASSESSMENT"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/purple"
                android:id="@+id/assessmentBtn"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="10dp"

            >
            <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:text="INTERVIEW"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/pink"
                android:id="@+id/interviewBtn"
                />
            <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:text="JOB OFFER"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/blue"
                android:id="@+id/jobOfferBtn"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upcoming Videos"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recommended Videos"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
    </LinearLayout>

</FrameLayout>